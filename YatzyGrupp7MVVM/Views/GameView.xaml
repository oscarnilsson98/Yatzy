            </Button>

            <Button x:Name="btnExitGame" Grid.Column="6" Command="{Binding ExitGameCommand}" Style="{DynamicResource ButtonStyleDices}" Width="60" Height="60" VerticalAlignment="Top">
                <Image Source="pack://application:,,,/Icons/Misc/exit.png"/>
            </Button>

